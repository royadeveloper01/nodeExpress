<body>
<%-include('../includes/navigation.ejs') %>
<main>
    <% if (orders.length <= 0) { %>
        <h2>You got no order fam!!!</h2>
    <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
            <li>
                <h2># <%= order.id %></h2>
                <ul>
                    <% order.products.forEach(product => { %>
                        <li><%= product.title %>(<%= product.orderItem.quantity %>)</li>
                    <% });  %>
                </ul>
            </li>
            <% }); %>
        </ul>
    <% } %>
</main>
<%-include('../includes/end.ejs') %>